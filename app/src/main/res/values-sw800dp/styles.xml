<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme_Dark_SmallFont" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="AppTheme_Dark_MediumFont" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="AppTheme_Dark_LargeFont" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme_Light_SmallFont" parent="android:Theme.Holo">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="AppTheme_Light_MediumFont" parent="android:Theme.Holo">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="AppTheme_Light_LargeFont" parent="android:Theme.Holo">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Widget" />
    <!-- Base theme for the menu drawer. -->
    <style name="Widget.MenuDrawer">
        <item name="mdMenuBackground">@color/md__defaultBackground</item>
        <item name="mdContentBackground">?android:attr/windowBackground</item>
        <item name="mdDrawerOpenUpContentDescription">@string/md__drawerOpenIndicatorDesc</item>
        <item name="mdDrawerClosedUpContentDescription">@string/md__drawerClosedIndicatorDesc</item>
    </style>

</resources>
